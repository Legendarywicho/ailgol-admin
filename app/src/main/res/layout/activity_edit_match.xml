<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    tools:context="com.luis_santiago.aigol_admin.UI.form.EditMatchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:gravity="center_horizontal"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:text="Fecha de partido"
            android:textColor="@color/white"
            android:layout_height="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:layout_height="55dp">
            <TextView
                android:id="@+id/show_date"
                android:layout_width="0dp"
                android:paddingLeft="22dp"
                android:layout_weight="2"
                android:text="5/6/2017"
                android:textColor="@color/white"
                android:layout_height="55dp"/>
            <Button
                android:id="@+id/date_input"
                android:backgroundTint="@android:color/holo_blue_bright"
                android:layout_width="120dp"
                android:layout_marginEnd="10dp"
                android:text="date"
                android:textColor="@color/white"
                android:layout_height="50dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="Modificar Partido"
            android:textColor="@color/white"
            android:layout_height="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/homeLogo"
                    android:layout_marginLeft="15dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:id="@+id/home_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:text="Guadalajara"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/layout_1"
                        android:layout_width="50dp"
                        android:layout_height="60dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/score_local"
                            android:layout_width="50dp"
                            android:gravity="center_horizontal"
                            android:text="4"
                            android:inputType="number"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_height="match_parent"/>
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="-"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:layout_height="wrap_content"/>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/layout_2"
                        android:layout_width="50dp"
                        android:layout_height="60dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/score_visitor"
                            android:layout_width="50dp"
                            android:gravity="center_horizontal"
                            android:text="4"
                            android:inputType="number"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_height="match_parent"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/awayLogo"
                    android:layout_width="70dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="70dp"/>
                <TextView
                    android:id="@+id/team_away"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Manchester"/>
            </LinearLayout>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_editText"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:textColorHint="@color/white"
            app:errorEnabled="true"
            android:layout_height="50dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:hint="Jornada"
                android:textColor="@color/white"
                android:inputType="number"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:text="Estado de partido"
            android:textColor="@color/white"
            android:layout_height="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            
            <RadioGroup
                android:id="@+id/circle_group"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_height="wrap_content">
                
                <RadioButton
                    android:id="@+id/live"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:buttonTint="@color/colorAccent"
                    android:text="En vivo"
                    />
                <RadioButton
                    android:id="@+id/done"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:buttonTint="@color/colorAccent"
                    android:text="Terminado"
                    />
                <RadioButton
                    android:id="@+id/toPlay"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:buttonTint="@color/colorAccent"
                    android:text="Por jugar"
                    />
            </RadioGroup>
        </LinearLayout>
        <Button
            android:id="@+id/upload_button"
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp"
            android:text="Actualizar"
            android:theme="@style/AppTheme.Button"
            android:layout_height="50dp"/>
    </LinearLayout>
</LinearLayout>
