<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luis_santiago.aigol_admin.UI.form.FormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginEnd="5dp"
            android:text="Fecha de partido"
            android:textColor="@color/white"
            android:layout_height="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:layout_height="55dp">
            <TextView
                android:id="@+id/show_date"
                android:layout_width="0dp"
                android:paddingLeft="15dp"
                android:layout_weight="2"
                android:text="Sin Fecha"
                android:textColor="@color/white"
                android:layout_height="55dp"/>
            <Button
                android:id="@+id/date_input"
                android:backgroundTint="@android:color/holo_blue_bright"
                android:layout_width="120dp"
                android:layout_marginEnd="10dp"
                android:text="date"
                android:textColor="@color/white"
                android:layout_height="50dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="5dp"
            android:gravity="center_horizontal"
            android:text="Equipo local"
            android:textColor="@color/white"
            android:layout_height="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_spinner"
                android:layout_width="0dp"
                android:paddingLeft="15dp"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:text="Equipo Local"
                android:textColor="@color/white"
                android:layout_height="25dp"/>

            <Spinner
                android:id="@+id/spinner"
                android:backgroundTint="@color/colorAccent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"/>
        </LinearLayout>

         <TextView
             android:layout_width="match_parent"
             android:textSize="20sp"
             android:layout_marginTop="50dp"
             android:layout_marginBottom="20dp"
             android:gravity="center_horizontal"
             android:layout_marginEnd="5dp"
             android:text="Equipo Visitante"
             android:textColor="@color/white"
             android:layout_height="25dp"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_marginBottom="10dp"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/text_spinner_2"
                 android:layout_width="0dp"
                 android:paddingLeft="15dp"
                 android:layout_weight="1"
                 android:paddingTop="4dp"
                 android:text="Equipo visitante"
                 android:textColor="@color/white"
                 android:layout_height="25dp"/>
             <Spinner
                 android:id="@+id/spinner_2"
                 android:backgroundTint="@color/colorAccent"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="25dp"/>
         </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_marginEnd="5dp"
            android:text="Jornada"
            android:textColor="@color/white"
            android:layout_height="25dp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_editText"
            android:layout_width="match_parent"
            android:textColorHint="@color/white"
            app:errorEnabled="true"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:hint="Jornada"
                android:textColor="@color/white"
                android:inputType="number"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>
         <Button
             android:id="@+id/upload_button"
             android:layout_gravity="center_horizontal"
             android:layout_width="120dp"
             android:text="Subir"
             android:theme="@style/AppTheme.Button"
             android:layout_height="50dp"/>
    </LinearLayout>
</LinearLayout>
